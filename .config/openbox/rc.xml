<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc" xmlns:xi="http://www.w3.org/2001/XInclude">
  <resistance>
    <strength>20</strength>
    <screen_edge_strength>40</screen_edge_strength>
  </resistance>
  <focus>
    <focusNew>yes</focusNew>
    <followMouse>no</followMouse>
    <focusLast>yes</focusLast>
    <underMouse>no</underMouse>
    <focusDelay>200</focusDelay>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>
  <placement>
    <policy>UnderMouse</policy>
    <center>yes</center>
    <monitor>Primary</monitor>
    <primaryMonitor>1</primaryMonitor>
  </placement>
  <theme>
    <cornerRadius menu="yes">0</cornerRadius>
    <name>whitey</name>
    <titleLayout>L</titleLayout>
    <keepBorder>yes</keepBorder>
    <font place="MenuItem">
      <name>Sans</name>
      <size>11</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <animateIconify>no</animateIconify>
    <font place="ActiveWindow">
      <name>Lobster</name>
      <size>9</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="InactiveWindow">
      <name>Lobster</name>
      <size>9</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="MenuHeader">
      <name>Sans</name>
      <size>9</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="ActiveOnScreenDisplay">
      <name>Sans</name>
      <size>10</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="InactiveOnScreenDisplay">
      <name>Sans</name>
      <size>8</size>
      <weight/>
      <slant/>
    </font>
  </theme>
  <desktops>
    <number>6</number>
    <firstdesk>1</firstdesk>
    <names>
      <name>● ○ ○ ○ ○ ○</name>
      <name>○ ● ○ ○ ○ ○</name>
      <name>○ ○ ● ○ ○ ○</name>
      <name>○ ○ ○ ● ○ ○</name>
      <name>○ ○ ○ ○ ● ○</name>
      <name>○ ○ ○ ○ ○ ●</name>
    </names>
    <popupTime>0</popupTime>
  </desktops>
  <resize>
    <drawContents>yes</drawContents>
    <popupShow>Never</popupShow>
    <popupPosition>Center</popupPosition>
    <popupFixedPosition>
      <x>0</x>
      <y>0</y>
    </popupFixedPosition>
  </resize>
  <menu>
    <file>menu.xml</file>
    <hideDelay>200</hideDelay>
    <middle>no</middle>
    <submenuShowDelay>75</submenuShowDelay>
    <submenuHideDelay>400</submenuHideDelay>
    <showIcons>no</showIcons>
    <manageDesktops>no</manageDesktops>
  </menu>
  <applications>
    <application name="tint2">
      <layer>above</layer>
    </application>
    <application class="polybar">
      <layer>behind</layer>
      <y>center</y>
    </application>
    <application class="Firefox">
      <!-- <decor>yes</decor>
      <position force="no">
        <x>center</x>
        <y>center</y>
        <monitor>1</monitor>
      </position>
      <focus>yes</focus> -->
    </application>
    <application class="mpv">
      <decor>yes</decor>
    </application>
  </applications>
  <margins>
    <top>0</top>
    <bottom>0</bottom>
    <left>0</left>
    <right>0</right>
  </margins>
